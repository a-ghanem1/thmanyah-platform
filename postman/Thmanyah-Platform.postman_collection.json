    {
      "name": "Studio Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const data = pm.response.json();",
              "if (data?.accessToken) {",
              "  pm.collectionVariables.set('jwtToken', data.accessToken);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@thmanyah.local\",\n  \"password\": \"password\"\n}"
        },
        "url": "{{baseUrl}}/studio/auth/login"
      }
    },
